<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableCell?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.codapi.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" wrapText="true" text="${'Please enter your Activision username with the numbers.\nReplace the # with %23\nex: Your name#000 -> Your name%23000'}"/>
    <TextField fx:id="inputName"/>
    <Button fx:id="submit" text="Submit" onAction="#onSubmitButtonClick"/>
</VBox>

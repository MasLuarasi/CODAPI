<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<GridPane alignment="CENTER"
          hgap="10.0" vgap="10.0"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.codapi.HelloController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label text="Assault Rifle Data"
           alignment="CENTER"
           style="-fx-font: NORMAL 20 Tahoma;"
           GridPane.columnIndex="0"
           GridPane.rowIndex="0"
           onMouseClicked="#onSubmitButtonClick"/>
    <TableView
            fx:id="tableView"
            GridPane.columnIndex="0"
            GridPane.rowIndex="1">
        <columns>
            <TableColumn fx:id="weaponName" text="Weapon"/>
            <TableColumn fx:id="kills" text="Kills"/>
            <TableColumn fx:id="deaths" text="Deaths"/>
            <TableColumn fx:id="kdRatio" text="K/D Ratio"/>
            <TableColumn fx:id="shots" text="Hits"/>
            <TableColumn fx:id="hits" text="Misses"/>
            <TableColumn fx:id="accuracy" text="Accuracy"/>
            <TableColumn fx:id="headshots" text="Headshots"/>
        </columns>
    </TableView>
</GridPane>

